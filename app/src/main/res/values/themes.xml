<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">#6200EE</item> <!-- Indigo -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#03DAC6</item> <!-- Teal -->
        <item name="colorOnSecondary">#000000</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background and text -->
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>

        <!-- Action Bar -->
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>

        <!-- Dialogs -->
        <item name="alertDialogTheme">@style/DialogTheme</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="CustomActionBarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/CustomActionBarTitleText</item>
    </style>

    <!-- Action Bar Title Text -->
    <style name="CustomActionBarTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog Theme -->
    <style name="DialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
