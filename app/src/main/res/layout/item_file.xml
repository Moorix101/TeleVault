<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main File Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- File Icon Container -->
            <FrameLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@android:color/darker_gray"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/ivFileIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="File icon"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#FFFFFF" />

            </FrameLayout>

            <!-- File Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Document.pdf"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5 MB"
                        android:textColor="#777777"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:text="•"
                        android:textColor="#777777"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvFileDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 14, 2025"
                        android:textColor="#777777"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 3-Dot Menu Button with Better Visibility -->
            <LinearLayout
                android:id="@+id/btnFileMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Three dots manually created for better visibility -->
                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:drawable/btn_default"
                    android:backgroundTint="#666666" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:drawable/btn_default"
                    android:backgroundTint="#666666" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:background="@android:drawable/btn_default"
                    android:backgroundTint="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- Upload Progress Section (Hidden when uploaded) -->
        <LinearLayout
            android:id="@+id/layoutUploadStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FFF3E0"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⬆️ Uploading..."
                    android:textColor="#F57C00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUploadProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="#F57C00"
                    android:textSize="13sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBarUpload"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#FF9800" />

        </LinearLayout>

        <!-- Upload Status Badge (for completed uploads) -->
        <LinearLayout
            android:id="@+id/layoutUploadComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#E8F5E9"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="Uploaded"
                android:src="@android:drawable/checkbox_on_background"
                app:tint="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="✓ Uploaded to Telegram Cloud"
                android:textColor="#2E7D32"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>